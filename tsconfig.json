{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "sourceMap": true,
        "target": "es2016", // NodeJs v8.9.3 supports most of the "es6" features
        "pretty": true,
        "outDir": "dist", // "./build",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["types"],
        "types": ["reflect-metadata", "node"],
        "moduleResolution": "node",
        "allowJs": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2016", "dom"] // No need for "es5" if you have "es6"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "**/*.spec.ts",
        "**/__tests__/*"
    ],
    "compileOnSave": false
}