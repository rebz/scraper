{
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "typeRoots": ["types"],
        "types": ["reflect-metadata"],
        "target": "es2018",
        "outDir": "./lib/",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "allowJs": true,
        "paths": {},
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "**/__tests__/*"
    ],
    "include": ["src/**/*"]
}